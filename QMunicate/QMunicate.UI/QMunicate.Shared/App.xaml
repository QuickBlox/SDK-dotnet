<Application
    x:Class="QMunicate.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:viewModels="using:QMunicate.ViewModels"
    xmlns:system="using:System"
    xmlns:resources="using:QMunicate.Resources">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/RadTextBox.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <x:Double x:Key="LargeFontSize">32</x:Double>
            <Thickness x:Key="DefaultMargin">12</Thickness>

            <viewModels:ViewModelLocator x:Key="Locator"  />
            <resources:LocalizedStrings x:Key="LocalizedStrings"  />
        </ResourceDictionary>
    </Application.Resources>
</Application>
